<?xml version="1.0" encoding="UTF-8" ?>

<openerp>
	<data noupdate="0">
		<record model="ir.module.category" id="module_category_ud_direcao">
			<field name="name">Direção / Portarias (UD)</field>
		</record>
		
		<record id="group_ud_direcao_visitante" model="res.groups">
			<field name="name">Visitante</field>
			<field name="category_id" ref="module_category_ud_direcao"/>
        	<field name="comment">Grupo usado para visitante não autenticados</field>
		</record>
		
		<record id="group_ud_direcao_responsavel" model="res.groups">
			<field name="name">Responsável por publicação</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
			<field name="category_id" ref="module_category_ud_direcao"/>
        	<field name="implied_ids" eval="[(4, ref('group_ud_direcao_visitante'))]"/>
        	<field name="comment">Grupo de controle de politicas para Gerente</field>
		</record>
        
	</data>
</openerp>
