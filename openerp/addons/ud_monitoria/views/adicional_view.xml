<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <!-- INFORMAÇÕES ADICIONAIS DE CURSO -->
        <record model="ir.ui.view" id="ud_curso_form_view">
            <field name="name">ud.curso.form</field>
            <field name="model">ud.curso</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="ud.view_curso_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='coordenador']" position="after">
                    <field name="coord_monitoria_id" colspan="2"/>
                    <field name="turno" colspan="2"/>
                    <field name="modalidade" colspan="2"/>
                </xpath>
            </field>
        </record>

        <!-- PESSOA: NÚCLEO -->
        <record model="ir.ui.view" id="ud_employee_info_basicas_form_view">
            <field name="name">ud.employee.form</field>
            <field name="model">ud.employee</field>
            <field eval="17" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Pessoa" create="false" edit="false" delete="false" version="7.0">
                    <group col="8">
                        <group colspan="6">
                            <field name="name" string="Nome"/>
                        </group>
                        <field name="image" widget='image' nolabel="1" class="oe_left oe_avatar" colspan="2"/>
                        <group string="Informações Pessoais" col="4" colspan="8">
                            <field name="cpf" class="cpf" colspan="2"/>
                            <field name="rg" colspan="2"/>
                            <field name="orgaoexpedidor" colspan="2"/>
                            <field name="birthday" class="birthday" colspan="2"/>
                            <field name="gender" colspan="2"/>
                            <field name="nacionalidade" colspan="2"/>
                            <field name="marital" colspan="2"/>
                        </group>
                        <group string="Outras Informações" col="4" colspan="8">
                            <group colspan="2">
                                <field name="rua"/>
                                <field name="bairro"/>
                                <field name="cidade"/>
                                <field name="estado"/>
                            </group>
                            <group colspan="2">
                                <field name="work_phone" class="work_phone"/>
                                <field name="mobile_phone" class="telefone" required="1"/>
                                <field name="work_email" widget="email" required="1"/>
                                <field name="curriculo_lattes_link" widget="url"/>
                            </group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- DISCIPLINA: OFERTA -->
        <record model="ir.actions.act_window" id="action_ud_monitoria_oferta_disciplina_tree_view">
            <field name="name">Oferta de disciplinas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud.monitoria.oferta.disciplina</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="ud_monitoria_oferta_disciplina_tree_view">
            <field name="name">ud.monitoria.oferta.disciplina.tree</field>
            <field name="model">ud.monitoria.oferta.disciplina</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Oferta de Disciplinas" editable="bottom">
                    <field name="curso_id"/>
                    <field name="disciplina_id"/>
                    <field name="em_oferta"/>
                    <field name="bolsas_disponiveis"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_monitoria_oferta_disciplina_form_view">
            <field name="name">ud.monitoria.oferta.disciplina.form</field>
            <field name="model">ud.monitoria.oferta.disciplina</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Oferta de Disciplina" version="7.0">
                    <div attrs="{'invisible': [('curso_id', '!=', False)]}">
                        <b>Obs.:</b>
                        Se o curso desejado não estiver na lista, provavelmente ele não esteja ativo, não foi registrado
                        ou
                        o campo "Modalidade" não foi devidamente preenchido. Para resolver esse problema, entre em
                        contato com o administrador do
                        sistema.
                    </div>
                    <group col="4">
                        <field name="curso_id" colspan="2" on_change="onchange_curso()"/>
                        <field name="disciplina_id" colspan="2"/>
                        <field name="em_oferta" colspan="2"/>
                        <field name="bolsas_disponiveis" colspan="2"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- DISCIPLINA -->
        <record id="ud_monitoria_disciplina_action" model="ir.actions.act_window">
            <field name="name">Disciplinas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ud.monitoria.disciplina</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="ud_monitoria_disciplina_tree" model="ir.ui.view">
            <field name="name">ud.monitoria.disciplina.form</field>
            <field name="model">ud.monitoria.disciplina</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Disciplinas" create="false" edit="false" colors="blue:is_active==True">
                    <field name="disciplina_id"/>
                    <field name="curso_id"/>
                    <field name="semestre_id"/>
                    <field name="orientador_id"/>
                    <field name="data_inicial"/>
                    <field name="data_final"/>
                    <field name="is_active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ud_monitoria_disciplina_form" model="ir.ui.view">
            <field name="name">ud.monitoria.disciplina.form</field>
            <field name="model">ud.monitoria.disciplina</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Disciplina" version="7.0" create="false" edit="false">
                    <group col="4">
                        <field name="curso_id" colspan="2" on_change="onchange_curso(curso_id)" readonly="1"/>
                        <field name="disciplina_id" colspan="2" domain="[('id', 'in', [])]" readonly="1"/>
                        <field name="semestre_id" colspan="2" readonly="1" options="{'no_open': true}"/>
                        <field name="orientador_id" colspan="2" readonly="1"
                               context="{'form_view_ref': 'ud_monitoria.ud_employee_info_basicas_form_view'}"/>
                        <field name="data_inicial" colspan="2" readonly="1"/>
                        <field name="data_final" colspan="2" readonly="1"/>
                    </group>
                    <group string="Discentes Bolsistas">
                        <field name="bolsista_ids" nolabel="1"/>
                    </group>
                    <group string="Discentes não Bolsistas">
                        <field name="n_bolsista_ids" nolabel="1"/>
                    </group>
                    <group string="Discentes no Cadastro de Reserva">
                        <field name="reserva_ids" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>
