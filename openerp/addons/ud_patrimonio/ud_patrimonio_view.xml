	            	<field name="name" />
	            	<field name="nome"/>
		            	<field name="espaco" />
		            	<field name="grupo" />
		            	<field name="estado" />
		            	<field name="marca_local" />
		            	<field name="modelo" />
	            </tree>
        	</field>
       </record>
