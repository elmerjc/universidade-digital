<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_servico_solicitacao_action">
            <field name="name">Solicitação de serviço</field>
            <field name="res_model">ud.servico.solicitacao</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clque para criar uma Solicitação de serviço
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_servico_solicitacao_tree">
            <field name="name">Solicitações de serviço</field>
            <field name="model">ud.servico.solicitacao</field>
            <field name="arch" type="xml">
                <tree string="Solicitações de serviço">
                    <field name="name"/>
                    <field name="descricao"/>
                    <field name="solicitante_id"/>
                    <field name="tipo_manutencao_id"/>
                    <field name="state"/>
                    <field name="data"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_servico_solicitacao_search">
            <field name="name">Busca</field>
            <field name="model">ud.servico.solicitacao</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="name" filter_domain="" string="Nome"/>
                    <field name="solicitante_id"/>
                    <field name="matricula"/>
                    <field name="setor_id"/>
                    <field name="email"/>
                    <field name="telefone"/>
                    <field name="data"/>
                    <field name="state"/>
                    <field name="descricao"/>
                    <field name="responsavel_analise_id"/>
                    <field name="data_execucao"/>
                    <field name="tipo_manutencao_id"/>
                    <field name="campus_id"/>
                    <field name="polo_id"/>
                    <field name="espaco_id"/>

                    <group expand="0" string="Agrupar por:">
                        <filter string="Campus" icon="terp-personal" domain="[]" context="{'group_by':'campus_id'}"/>
                        <filter string="Polo" icon="terp-personal" domain="[]" context="{'group_by':'polo_id'}"/>
                        <filter string="Espaço" icon="terp-personal" domain="[]" context="{'group_by':'espaco_id'}"/>
                        <filter string="Solicitante" icon="terp-personal" domain="[]"
                                context="{'group_by':'solicitante_id'}"/>
                        <filter string="Setor solicitante" icon="terp-personal" domain="[]"
                                context="{'group_by':'setor_id'}"/>
                        <filter string="Data" icon="terp-personal" domain="[]" context="{'group_by':'data'}"/>
                        <filter string="Status" name="status" icon="terp-personal" domain="[]"
                                context="{'group_by':'state'}"/>
                        <filter string="Data de cancelamento" icon="terp-personal" domain="[]"
                                context="{'group_by':'data_cancelamento'}"/>
                        <filter string="Responsável" icon="terp-personal" domain="[]"
                                context="{'group_by':'responsavel_analise_id'}"/>
                        <filter string="Previsão de execução" icon="terp-personal" domain="[]"
                                context="{'group_by':'previsao'}"/>
                        <filter string="Data de execução" icon="terp-personal" domain="[]"
                                context="{'group_by':'data_execucao'}"/>
                        <filter string="Tipo de manutenção" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_manutencao_id'}"/>
                        <filter string="Tipo de equipamento" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_equipamento_id'}"/>
                        <filter string="Tipo de equipamento elétrico" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_equipamento_eletrico_id'}"/>
                        <filter string="Tipo de refrigerador" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_refrigerador_id'}"/>
                        <filter string="Tipo de ar condicionado" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_ar_condicionado_id'}"/>
                        <filter string="Tipo de manutenção predial" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_predial_id'}"/>
                        <filter string="Tipo de instalação predial" icon="terp-personal" domain="[]"
                                context="{'group_by':'tipo_instalacoes_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_servico_solicitacao_form">
            <field name="name">Solicitação de serviço</field>
            <field name="model">ud.servico.solicitacao</field>
            <field name="arch" type="xml">
                <form string="Solicitação de serviço">
                    <header>
                        <button string="Para Análise" states="nova" type="action" name="ud_servico.atribuir_responsavel_action"
                                groups="base.gerente_os"/>
                        <button string="Encaminhar para execução" states="atribuida" type="action"
                                name="ud_solicitacao.aprovar_action0" groups="base.gerente_os,base.responsavel_os"/>
                        <button string="Executar Solicitação" states="aprovada" type="action"
                                name="ud_solicitacao.executar_wiz_action" groups="base.gerente_os"/>
                        <button string="Finalizar Solicitação" states="execucao" type="action"
                                name="ud_solicitacao.finalizar_wiz_action" groups="base.gerente_os"/>
                        <button string="Cancelar Solicitação" states="nova" type="action"
                                name="ud_solicitacao.cancelar_wiz_action"/>
                        <button string="Cancelar Solicitação" states="atribuida,aprovada,execucao" type="action"
                                name="ud_solicitacao.cancelar_wiz_action" groups="base.gerente_os"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="nova,atribuida,aprovada,execucao,finalizada,cancelada" readonly="1"/>
                    </header>
                    <div class="form-horizontal sheet col-sm-12 col-xs-12">
                        <fieldset>
                            <legend>Dados do solicitante</legend>
                            <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('name', '=', False)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="name"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="name"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="solicitante_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="solicitante_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('matricula', '=', False)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="matricula"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="matricula"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('setor_id', '=', False)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="setor_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="setor_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="email"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="email" readonly="1"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="telefone"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="telefone"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="data"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="data"/>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>Local</legend>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="campus_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="campus_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="polo_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="polo_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="espaco_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="espaco_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('bloco_id', '=', False)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="bloco_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="bloco_id" readonly="1"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="detalhes_espaco"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="detalhes_espaco"/>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>Serviço</legend>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_manutencao_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_manutencao_id"/>
                                </div>
                            </div>
                            <!-- Classificações de equipamentos -->
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_manutencao_id', '!=', %(manutencao_equipamento)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_equipamento_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_equipamento_id"
                                           attrs="{'required': [('tipo_manutencao_id', '=', %(manutencao_equipamento)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_equipamento_id', '!=', %(equipamento_eletrico)d)]}">
                                <label class="col-md-4 col-sm-4 control-label"
                                       for="tipo_equipamento_eletrico_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_equipamento_eletrico_id"
                                           attrs="{'required': [('tipo_equipamento_id', '=', %(equipamento_eletrico)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_equipamento_eletrico_id', '!=', %(equip_eletrico_refrigerador)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_refrigerador_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_refrigerador_id"
                                           attrs="{'required': [('tipo_equipamento_eletrico_id', '=', %(equip_eletrico_refrigerador)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_refrigerador_id', '!=', %(refrigerador_ar_condicionado)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_ar_condicionado_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_ar_condicionado_id"
                                           attrs="{'required': [('tipo_refrigerador_id', '=', %(refrigerador_ar_condicionado)d)]}"/>
                                </div>
                            </div>
                            <!-- Classificações de equipamentos - FIM -->
                            <!-- Classificação de manutenção predial -->
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_manutencao_id', '!=', %(manutencao_predial)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_predial_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_predial_id"
                                           attrs="{'required': [('tipo_manutencao_id', '=', %(manutencao_predial)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_predial_id', '!=', %(tipo_predial_instalacoes)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="tipo_instalacoes_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="tipo_instalacoes_id"
                                           attrs="{'required': [('tipo_predial_id', '=', %(tipo_predial_instalacoes)d)]}"/>
                                </div>
                            </div>
                            <!-- Classificação de manutenção predial - FIM -->
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_manutencao_id', '!=', %(movimentacao_de_materiais)d), ('tipo_equipamento_eletrico_id', '!=', %(equip_eletrico_outro)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="denominacao"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="denominacao"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_manutencao_id', '!=', %(manutencao_equipamento)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="numero_patrimonio"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="numero_patrimonio"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_equipamento_id', '!=', %(equipamento_eletrico)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="marca_equipamento"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="marca_equipamento"
                                           attrs="{'required': [('tipo_equipamento_id', '=', %(equipamento_eletrico)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group"
                                 attrs="{'invisible': [('tipo_equipamento_id', '!=', %(equipamento_eletrico)d)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="modelo_equipamento"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="modelo_equipamento" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset attrs="{'invisible': [('tipo_manutencao_id', '!=', %(movimentacao_de_materiais)d)]}">
                            <legend>Destino da movimentação</legend>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="campus_destino_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="campus_destino_id"
                                           attrs="{'required': [('tipo_manutencao_id', '=', %(movimentacao_de_materiais)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="polo_destino_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="polo_destino_id"
                                           attrs="{'required': [('tipo_manutencao_id', '=', %(movimentacao_de_materiais)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="espaco_destino_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="espaco_destino_id"
                                           attrs="{'required': [('tipo_manutencao_id', '=', %(movimentacao_de_materiais)d)]}"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group" attrs="{'invisible': [('bloco_destino_id', '=', False)]}">
                                <label class="col-md-4 col-sm-4 control-label" for="bloco_destino_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="bloco_destino_id" readonly="1" />
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="detalhes_espaco_destino"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="detalhes_espaco_destino" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="col-md-12 col-lg-12 form-group">
                                <legend>Descrição</legend>
                                <div class="col-md-12 col-sm-12">
                                    <field name="descricao"/>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>