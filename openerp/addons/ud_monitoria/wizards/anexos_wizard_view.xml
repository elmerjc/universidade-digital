<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		<!-- Anexo -->
		<record model="ir.ui.view" id="ud_monitoria_anexo_wizard_form_view">
			<field name="name">ud.monitoria.anexo.wizard.form</field>
			<field name="model">ud.monitoria.anexo.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Anexo" version="7.0">
					<group>
						<field name="name" invisible="1"/>
						<field name="arquivo" filename="name"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Anexos -->
		<record model="ir.actions.act_window" id="action_ud_monitoria_anexos_wizard_view">
			<field name="name">Anexos</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ud.monitoria.anexos.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<record model="ir.ui.view" id="ud_monitoria_anexos_wizard_form_view">
			<field name="name">ud.monitoria.anexos.wizard.form</field>
			<field name="model">ud.monitoria.anexos.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Anexos" version="7.0">
					<div>
						<b>Obs.:</b> Alteração em anexos já cadastrados (registros em azul) serão descartadas.
					</div>
					<field name="anexos_ids">
						<tree colors="blue:_id!=False;green:_id==False">
							<field name="name"/>
							<field name="arquivo"/>
							<field name="_id" invisible="1"/>
						</tree>
					</field>
					<footer>
						<button name="botao_salvar" string="Salvar" type="object" class="oe_highlight" /> ou
						<button string="Cancelar" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
		
		
	</data>
</openerp>