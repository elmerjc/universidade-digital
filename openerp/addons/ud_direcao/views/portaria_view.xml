<?xml version="1.0" encoding="utf-8" ?>

<openerp>
    <data>

        <record model="ir.actions.act_window" id="ud_direcao_portaria_action">
            <field name="name">Portarias</field>
            <field name="res_model">ud.direcao.portaria</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_agrupar_campus': 1, 'search_default_agrupar_setor': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clque para registrar uma nova Portaria
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_direcao_portaria)tree">
            <field name="name">Portarias</field>
            <field name="model">ud.direcao.portaria</field>
            <field name="arch" type="xml">
                <tree string="Portarias">
                    <field name="nro_portaria"/>
                    <field name="data"/>
                    <field name="campus_id"/>
                    <field name="polo_id"/>
                    <field name="setor_id"/>
                    <field name="file_name" invisible="1" />
                    <field name="anexo" filename="file_name" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_direcao_portaria_search">
            <field name="name">Busca</field>
            <field name="model">ud.direcao.portaria</field>
            <field name="arch" type="xml">
                <search string="Busca">
                    <field name="nro_portaria"/>
                    <field name="descricao"/>
                    <field name="data"/>
                    <field name="campus_id"/>
                    <field name="polo_id"/>
                    <field name="setor_id"/>
                    <field name="responsavel_id" />
                    <group expand="0" string="Agrupar por:">
                        <filter string="Campus" name="agrupar_campus" icon="terp-personal" domain="[]" context="{'group_by':'campus_id'}"/>
                        <filter string="Polo" name="agrupar_polo" icon="terp-personal" domain="[]" context="{'group_by':'polo_id'}"/>
                        <filter string="Setor" name="agrupar_setor" icon="terp-personal" domain="[]" context="{'group_by':'setor_id'}"/>
                        <filter string="Responsável" icon="terp-personal" domain="[]"
                                context="{'group_by':'responsavel_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_direcao_portaria_form">
            <field name="name">Nova Portaria</field>
            <field name="model">ud.direcao.portaria</field>
            <field name="arch" type="xml">
                <form string="Nova Portaria" version="7.0">
                    <sheet class="form-horizontal col-sm-12 col-xs-12">
                        <group>
                            <group>
                                <field name="nro_portaria"/>
                                <field name="data"/>
                                <field name="file_name" invisible="1" />
                                <field name="responsavel_id" readonly="1"/>
                                <field name="anexo" filename="file_name" class="anexo-field"/>
                            </group>
                            <group>
                                <field name="campus_id"/>
                                <field name="polo_id" domain="[('campus_id', '=', campus_id)]"/>
                                <field name="setor_id"
                                       domain="[('polo_id', '=', polo_id), ('emite_portaria', '=', True)]"
                                       on_change="onchange_setor_id(setor_id)"/>
                                <field name="setor_destino_id"
                                       domain="[('polo_id', '=', polo_id)]"
                                       on_change="onchange_setor_id(setor_id)"/>
                            </group>
                        </group>
                        <group string="Descrição">
                            <field name="descricao" nolabel="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>